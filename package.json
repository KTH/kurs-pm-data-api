{
  "//": "The production flag is added in the jenkins build script.",
  "name": "kurs-pm-data-api",
  "version": "0.8.0",
  "description": "API that supports the new administraion site that makes it possible to create and manage course memos.",
  "main": "app.js",
  "private": true,
  "scripts": {
    "codefix": "pretty-quick",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest test/unit/*.js --watch",
    "test-unit-in-docker": "ID=$(docker build -q .) && LOCAL_IMAGE_ID=$ID docker-compose -f docker-compose-unit-tests.yml up --build --abort-on-container-exit --always-recreate-deps --force-recreate",
    "test:docker:integration": "docker build --progress plain -t kurs-pm-data-api-integration . && bash -c 'LOCAL_IMAGE_ID=kurs-pm-data-api-integration SUCCESS_DELAY=5000 docker-compose -f docker-compose-integration-tests.yml up --abort-on-container-exit --build --remove-orphans'",
    "start": "NODE_ENV=production node app.js",
    "start-dev": "cross-env NODE_ENV=development nodemon app.js"
  },
  "dependencies": {
    "@kth/kth-node-cosmos-db": "^3.0.6",
    "applicationinsights": "^1.8.10",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.1",
    "component-registry": "^2.0.0",
    "cookie-parser": "^1.4.6",
    "date-fns": "^2.28.0",
    "date-fns-tz": "^1.2.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-handlebars": "^5.3.5",
    "kth-node-access-log": "^0.2.7",
    "kth-node-api-common": "^1.0.10",
    "kth-node-api-key-strategy": "^1.0.14",
    "kth-node-configuration": "^2.0.8",
    "kth-node-express-routing": "^2.0.12",
    "kth-node-log": "^3.1.11",
    "kth-node-mongo": "^3.3.23",
    "kth-node-monitor": "^1.1.14",
    "kth-node-server": "^3.1.9",
    "mongoose": "^5.13.14",
    "passport": "^0.4.1",
    "safe-utils": "1.0.1",
    "saslprep": "^1.0.3",
    "swagger-ui-dist": "^3.52.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.12",
    "@babel/plugin-proposal-decorators": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@kth/eslint-config-kth": "^2.0.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.4.6",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "husky": "^4.3.8",
    "jest": "^27.4.7",
    "jest-extended": "^1.2.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "proxyquire": "^2.1.3",
    "supertest": "^6.2.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "engines": {
    "node": "12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test",
      "pre-commit": "pretty-quick --staged"
    }
  }
}
